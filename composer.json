{
    "name": "flashtag/flashtag",
    "description": "Flashtag CMS",
    "keywords": ["cms", "flashtag"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "venturecraft/revisionable": " 1.*",
        "dingo/api": "dev-master@dev",
        "tymon/jwt-auth": "0.6.*",
        "ryanwinchester/laravel-auto-presenter": "^4.3",
        "filp/whoops": " ~1.0",
        "doctrine/dbal": "^2.5",
        "fzaninotto/faker": "~1.4",
        "guzzlehttp/guzzle": "^6.1"
    },
    "require-dev": {
        "laravel/homestead": "^2.1",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "benconstable/phpspec-laravel": "~2.0",
        "satooshi/php-coveralls": "0.6.*",
        "codeclimate/php-test-reporter": "@dev",
        "behat/behat": "^3.0",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "laracasts/behat-laravel-extension": "^1.0",
        "behat/mink-selenium2-driver": "^1.3"
    },
    "autoload": {
        "classmap": [
            "database/"
        ],
        "psr-4": { "Flashtag\\": "app/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests" }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev"
}
