{
    "name": "flashtag/flashtag",
    "description": "Flashtag CMS",
    "keywords": ["cms", "flashtag"],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/admin.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/api.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/client.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/cms.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/data.git"
        }
    ],
    "replace": {
        "flashtag/admin": "self.version",
        "flashtag/api": "self.version",
        "flashtag/client": "self.version",
        "flashtag/cms": "self.version",
        "flashtag/data": "self.version"
    },
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "venturecraft/revisionable": " 1.*",
        "dingo/api": "dev-master@dev",
        "tymon/jwt-auth": "0.6.*",
        "mccool/laravel-auto-presenter": "~4.1",
        "filp/whoops": " ~1.0",
        "doctrine/dbal": "^2.5"
    },
    "require-dev": {
        "laravel/homestead": "^2.1",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "benconstable/phpspec-laravel": "~2.0",
        "fzaninotto/faker": "~1.4"
    },
    "autoload": {
        "classmap": [
            "database/"
        ],
        "psr-4": { "Flashtag\\": "app/" }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev"
}
